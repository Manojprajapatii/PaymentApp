<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fitsSystemWindows="true"
    tools:context=".activity.MoneyTransaction">

    <RelativeLayout
        android:id="@+id/first_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m23"
            android:layout_marginTop="@dimen/m30"
            android:layout_marginEnd="@dimen/m23">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/name"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/notifation" />

        </RelativeLayout>

        <!--        <ViewFlipper-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:flipInterval="5000"-->
        <!--            android:autoStart="true"-->
        <!--            android:layout_below="@+id/top_heading"-->
        <!--            android:inAnimation="@android:anim/slide_out_right"-->
        <!--            android:outAnimation="@android:anim/slide_in_left">-->


        <RelativeLayout
            android:id="@+id/first_card_desing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_heading"
            android:layout_margin="@dimen/m10">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="@dimen/m300"
                android:layout_height="@dimen/m170"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/m80"
                android:layout_marginEnd="@dimen/m10"
                app:cardBackgroundColor="#4DFFFFFF"
                app:cardCornerRadius="@dimen/m30"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/m5">

                    <ImageView
                        android:id="@+id/visa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m20"
                        android:layout_marginTop="@dimen/m20"
                        android:background="@drawable/visa_blur" />


                    <TextView
                        android:id="@+id/code_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/m20"
                        android:layout_marginEnd="@dimen/m40"
                        android:text="@string/code_number"
                        android:textColor="#43FFFFFF"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/visa"
                        android:layout_marginStart="@dimen/m20"
                        android:layout_marginTop="@dimen/m90"
                        android:text="@string/balance"
                        android:textColor="#3BFFFFFF"
                        android:textSize="@dimen/text_16" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/code_number"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/m80"
                        android:layout_marginEnd="@dimen/m40"

                        android:src="@drawable/chip_blur" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="@dimen/m426"
                android:layout_height="@dimen/m190"
                android:layout_marginStart="@dimen/m35"
                android:layout_marginEnd="@dimen/m23"
                app:cardBackgroundColor="#C1FFFFFF"
                app:cardCornerRadius="@dimen/m30"
                app:cardElevation="@dimen/m1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m30"
                        android:layout_marginTop="@dimen/m20"
                        android:src="@drawable/mastercard_logo2" />


                    <TextView
                        android:id="@+id/code_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/m20"
                        android:layout_marginEnd="@dimen/m40"
                        android:text="@string/code_number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m20"
                        android:layout_marginTop="@dimen/m120"
                        android:layout_marginEnd="@dimen/m40">

                        <TextView
                            android:id="@+id/balance2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/balance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_11" />

                        <TextView
                            android:id="@+id/available_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m12"
                            android:text="@string/available_balance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_24"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m10"
                            android:layout_marginTop="@dimen/m20"
                            android:layout_toRightOf="@+id/available_balance"
                            android:src="@drawable/vector2" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/m20"
                            android:rotation="-5"
                            android:src="@drawable/chip" />
                    </RelativeLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <!--        </ViewFlipper>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_card_desing"
            android:layout_marginTop="@dimen/m25">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_left_corners">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m23"
                    android:layout_marginEnd="@dimen/m23">

                    <RelativeLayout
                        android:id="@+id/first_upi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m40">

                        <ImageView
                            android:id="@+id/qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m10"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/qr_code" />

                        <TextView
                            android:id="@+id/text_qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/qr"
                            android:layout_marginStart="@dimen/m10"
                            android:layout_marginTop="@dimen/m5"
                            android:text="@string/sacn_qr"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/contacts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m30"
                            android:layout_toRightOf="@+id/qr"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/contacts" />

                        <TextView
                            android:id="@+id/pay_contects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/contacts"
                            android:layout_marginStart="@dimen/m35"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/text_qr"
                            android:text="@string/pay_contects"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/smartphone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m30"
                            android:layout_toRightOf="@+id/contacts"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/smartphone" />

                        <TextView
                            android:id="@+id/pay_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/smartphone"
                            android:layout_marginStart="@dimen/m35"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/pay_contects"
                            android:text="@string/pay_phone_number"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/upi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m30"
                            android:layout_toRightOf="@+id/smartphone"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upi" />

                        <TextView
                            android:id="@+id/pay_upi_id_or_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/upi"
                            android:layout_marginStart="@dimen/m35"
                            android:layout_marginTop="@dimen/m5"
                            android:layout_toRightOf="@+id/pay_phone_number"
                            android:text="@string/pay_upi_id_or_number"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/first_upi2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_upi"
                        android:layout_marginTop="@dimen/m20">

                        <ImageView
                            android:id="@+id/ruser_received"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m10"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ruser_received" />

                        <TextView
                            android:id="@+id/self_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ruser_received"
                            android:layout_marginStart="@dimen/m15"
                            android:layout_marginTop="@dimen/m5"
                            android:text="@string/self_transfer"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m30"
                            android:layout_toRightOf="@+id/ruser_received"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bank" />

                        <TextView
                            android:id="@+id/bank_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bank"
                            android:layout_marginStart="@dimen/m35"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/ruser_received"
                            android:text="@string/bank_transfer"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/vip_crown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m30"
                            android:layout_toRightOf="@+id/bank"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vip_crown" />

                        <TextView
                            android:id="@+id/my_rewards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vip_crown"
                            android:layout_marginStart="@dimen/m35"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/bank_transfer"
                            android:text="@string/my_rewards"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/funds_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m30"
                            android:layout_toRightOf="@+id/vip_crown"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/funds_box" />


                        <TextView
                            android:id="@+id/invest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/funds_box"
                            android:layout_marginStart="@dimen/m35"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/vip_crown"
                            android:text="@string/invest"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/first_upi3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_upi2"
                        android:layout_marginStart="@dimen/m10"
                        android:layout_marginTop="@dimen/m20"
                        android:layout_marginEnd="@dimen/m30">

                        <ImageView
                            android:id="@+id/group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_shape"
                            android:padding="@dimen/m15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/group" />

                        <TextView
                            android:id="@+id/spend_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/group"
                            android:layout_marginStart="@dimen/m5"
                            android:layout_marginTop="6dp"
                            android:text="@string/spend_analysis"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/first_upi4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_upi3"
                        android:layout_margin="@dimen/m30">


                        <TextView
                            android:id="@+id/transaction_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m7"
                            android:text="@string/transaction_history"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/m10"
                            android:layout_marginTop="@dimen/m12"
                            android:layout_toRightOf="@+id/transaction_history"
                            android:src="@drawable/left_right" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/first_upi5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_upi4"
                        android:layout_marginTop="@dimen/m20"
                        android:layout_marginBottom="@dimen/m40"

                        >


                        <androidx.cardview.widget.CardView
                            android:id="@+id/swiggy_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/m23"
                            app:cardBackgroundColor="#90FFFFFF"
                            app:cardCornerRadius="@dimen/m30"
                            android:layout_marginBottom="@dimen/m20"
                            app:cardElevation="1dp">

                            <RelativeLayout
                                android:id="@+id/swiggy_content"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/m10">

                                <RelativeLayout
                                    android:id="@+id/swiggy_line"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/m15">

                                    <ImageView
                                        android:id="@+id/swiggy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/swiggy" />

                                    <com.payment.view.BoldTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/m20"
                                        android:layout_toRightOf="@+id/swiggy"
                                        android:text="@string/swiggy"
                                        android:textSize="@dimen/text_20"
                                        android:textStyle="bold" />

                                    <com.payment.view.BoldTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="@string/swiggy_money"
                                        android:textSize="@dimen/text_20"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/m15"
                                    android:layout_marginTop="@dimen/m70"
                                    android:layout_marginEnd="@dimen/m10"
                                    android:layout_marginBottom="@dimen/m23">

                                    <com.payment.view.BoldTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/m10"
                                        android:text="@string/date"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/text_13" />

                                    <com.payment.view.BoldTextView
                                        android:id="@+id/transferred"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="@string/transferred"
                                        android:textColor="@color/gray"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/text_13"/>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/m25"
                                        android:layout_marginEnd="@dimen/m5"

                                        android:layout_toLeftOf="@+id/transferred"
                                        android:src="@drawable/arrow_up_left" />

                                </RelativeLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                </RelativeLayout>


            </FrameLayout>


        </RelativeLayout>


    </RelativeLayout>


</ScrollView>